<tpl name="admin_slider">
   
    <div id="header" class="admin_slider_header">
        <div class="mode_controls">
            <div class="btn pc" id="btn_mode_pc" events="onclick=setMode" mode="pc"></div>
            <div class="btn mobile" id="btn_mode_mobile" events="onclick=setMode" mode="mobile"></div>
        </div>

        <div class="left_buttons" id="header_left">
            <a events="onclick=onClearMobileDataClick">Cancel mobile site version</a>
        </div>

        <div class="right_buttons">
            <div class="exit" events="onclick=onExitClick" baloon_tooltip_id="14"></div>
            <div class="preview" events="onclick=onPreviewClick" baloon_tooltip_id="9"></div>
            <div class="import" events="onclick=onRunImportClick" baloon_tooltip_id="9"></div>
            <div class="save" events="onclick=onSaveClick" id="btn_save_site" style="display: none"></div>
        </div>
    </div>

    <div id="window" class="admin_slider">
        <div id="slider" class="slider">
            <div id="content" class="content"></div>
            

            <div id="footer" class="footer">
                <div class="bolts_wrapper" id="bolts_wrapper"></div>
            </div>
        </div>
    </div>
</tpl>