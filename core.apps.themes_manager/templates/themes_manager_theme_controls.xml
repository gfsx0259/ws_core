<tpl name="themes_manager_theme_controls">
    <div class="controls" id="theme_controls">
        <div></div>
        <img id="cbtn_edit" src="/static/icons/settings.png" events="onclick=onEditThemeClick" title="Theme properties" class="left"/>
        <img id="cbtn_delete" src="/static/icons/cross.png" events="onclick=onRemoveThemeClick" title="Delete theme" class="right"/>
        <img id="cbtn_save"  src="/static/icons/disk.png" events="onclick=onSaveThemeClick" title="Export theme to file" class="right"/>
    </div>
</tpl>