            <label>Main font</label>
            <wsc_font_family id="inp_main-font"/>
        </div>
        <div class="form_row">
            <label>Heading font</label>
            <wsc_font_family id="inp_heading-font"/>
        </div>
        <div class="form_row">
            <label>Fancy font</label>
            <wsc_font_family id="inp_fancy-font"/>
        </div>
    </wsc_fieldset>                    
</tpl>