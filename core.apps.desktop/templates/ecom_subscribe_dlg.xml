<tpl name="ecom_subscribe_dlg">
    <div id="ecom_subscribe_dlg" class="ecom_subscribe_dlg_wrapper">
        <div class="ecom_subscribe_dlg">
            <div class="close" events="onclick=hideEcomSubscribeDlg">x</div>
            <div id="ecom_subscribe_form" class="form">
                <div class="row form-group">
                    <label>Enter email:</label>
                    <input type="text" class="form-control" id="inp_ecom_subscribe_email"/>
                </div>
                <div class="row form-group">
                    <button class="btn btn-primary" events="onclick=onEcomSubscribeClick">Ok</button>
                </div>
            </div>
            <div id="ecom_subscribe_msg" class="msg"></div>
        </div>
    </div>
</tpl>