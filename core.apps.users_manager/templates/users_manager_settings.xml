<tpl name="users_manager_settings">
    <div id="content_settings" style="display: none">

        <div class="form_row">
            <wsc_checkbox id="inp_enable_users" title="Enable site users"/>
        </div>

        <div class="form_row">
            <wsc_checkbox id="inp_users_reg_moderation" events="onchange=onSettingsModerationChange" title="New users moderation"/>
        </div>

        <div class="form_row">
            <wsc_checkbox id="inp_users_reg_confirmation" title="Enable registration email confirmation"/>
        </div>

        <div class="form_row">
            <wsc_textarea id="inp_users_reg_msg" class="h100" title="Registration message"/>
        </div>

        <div class="form_row">
            <wsc_button id="btn_save_settings" events="onclick=onSaveSettingsClick" title="Save"/>
        </div>

        <div id="msg_settings_saved" class="message_success" style="display: none">Settings saved</div>
    </div>
</tpl>