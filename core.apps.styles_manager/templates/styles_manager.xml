        <div class="tabs_bar">
            <a id="btn_tab_theme_styles" key="theme_styles" events="onclick=onTabClick"><span>Theme styles</span></a>
            <a id="btn_tab_user_styles" key="user_styles" events="onclick=onTabClick"><span>More my styles</span></a>
            <a id="btn_tab_admin_styles" key="admin_styles" events="onclick=onTabClick"><span>Styles directory</span></a>
